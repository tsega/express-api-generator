  "name": "{{appName}}-api",
  "version": "0.0.1",
  "description": "{{appDescription}}",
  "repository": {
    "type": "{{repositoryType}}",
    "url": "{{repositoryAddress}}"
  },
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha",
    "start": "DEBUG={{appName}}* nodemon app.js",
