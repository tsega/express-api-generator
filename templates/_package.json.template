    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "apidoc": {
    "name":"{{appName}}-api",
    "version": "0.0.1",
    "description": "{{appDescription}}",
    "title": "{{appName}}-api Documentation"
